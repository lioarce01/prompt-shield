# API Keys for Detection Engine
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# API Gateway Configuration
SECRET_KEY=your-super-secret-key-change-in-production-with-at-least-32-characters
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/prompt_shield
REDIS_URL=redis://redis:6379/0

# Service URLs  
DETECTION_ENGINE_URL=http://detection-engine:8080

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,api-gateway,your-domain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,https://your-domain.com

# Multi-Tenant Settings
TENANT_ISOLATION_ENABLED=true
TENANT_DEFAULT_DETECTION_THRESHOLD=0.7
TENANT_DEFAULT_RATE_LIMIT_PER_MINUTE=1000
TENANT_DEFAULT_CACHE_TTL_SECONDS=1800

# Optional: Additional Settings
LOG_LEVEL=INFO
ANALYTICS_RETENTION_DAYS=90
REQUEST_TIMEOUT_SECONDS=30
DETECTION_TIMEOUT_SECONDS=25