# Environment Configuration Template
# Copy this to .env and fill in your values

# Application Settings
DEBUG=true
VERSION=1.0.0

# Security (REQUIRED - generate secure values for production)
SECRET_KEY=your-secret-key-minimum-32-characters-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prompt_defense
DATABASE_ECHO=false

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# Detection Engine
DETECTION_ENGINE_URL=http://localhost:8080

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security & CORS
ALLOWED_HOSTS=localhost,127.0.0.1,api.example.com
CORS_ORIGINS=http://localhost:3000,https://app.example.com

# Rate Limiting (default values)
DEFAULT_RATE_LIMIT_PER_MINUTE=60
DEFAULT_RATE_LIMIT_PER_DAY=10000

# Detection Settings
DEFAULT_CONFIDENCE_THRESHOLD=0.6
MAX_TEXT_LENGTH=10000
MAX_BATCH_SIZE=100

# Webhook Settings
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT=10

# Background Tasks (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Keys for Go Detection Engine (required for detection to work)
HUGGINGFACE_API_KEY=your_huggingface_api_key
GEMINI_API_KEY=your_gemini_api_key

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# Production Settings
ENVIRONMENT=development
TRUSTED_HOSTS=localhost,api.example.com